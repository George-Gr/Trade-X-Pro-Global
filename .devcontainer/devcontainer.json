{
  "name": "TradePro v10 Development",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:1-20-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "remoteEnv": {
    "NODE_OPTIONS": "--max-old-space-size=4096"
  },
  "postCreateCommand": "npm install",
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "dbaeumer.vscode-eslint",
        "Vue.volar"
      ],
      "settings": {
        "typescript.tsserver.maxMemory": 4096,
        "typescript.enablePromptUseWorkspaceTsdk": true,
        // Enable Copilot Raptor mini (Preview) in Codespaces/devcontainer environment
        "github.copilot.experimental.raptorMiniEnabled": true,
        "github.copilot.experimental.raptorMiniForAllClients": true,
        "github.copilot.model": "raptor-mini",
        // Fix ESLint duplicate diagnostic collection
        "eslint.lintTask.enable": true,
        "eslint.onIgnoredFiles": "off",
        // Fix chatParticipant error with claude-code
        "github.copilot.chat.experimental.agents": false,
        "github.copilot.experimental.restrictedAgent": false
      }
    }
  },
  "forwardPorts": [8080, 3000],
  "portsAttributes": {
    "8080": {
      "label": "Dev Server",
      "onAutoForward": "notify"
    },
    "3000": {
      "label": "Alternative",
      "onAutoForward": "notify"
    }
  }
}
