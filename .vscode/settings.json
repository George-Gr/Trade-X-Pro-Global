{
  // Editor Settings
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.rulers": [
    120
  ],
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,
  "editor.minimap.showSlider": "always",
  "editor.scrollBeyondLastLine": false,
  "editor.fontFamily": "Fira Code, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.lineHeight": 1.5,
  "editor.letterSpacing": 0.5,
  // TypeScript Settings
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.format.enable": true,
  // ESLint Settings
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.format.enable": true,
  "eslint.workingDirectories": [
    "."
  ],
  // Prettier Settings
  "prettier.requireConfig": true,
  "prettier.useEditorConfig": false,
  // Git Settings
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.ignoreLegacyWarning": true,
  // Terminal Settings
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.profiles.osx": {
    "zsh": {
      "path": "/bin/zsh"
    }
  },
  // File Settings
  "files.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.git": true,
    "**/.DS_Store": true,
    "**/.vscode": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.git": true,
    "**/.DS_Store": true,
    "**/.vscode": true,
    "**/*.log": true,
    "**/*.log.*": true
  },
  // Extensions Settings
  "bradlc.vscode-tailwindcss.includeLanguages": {
    "javascript": "javascript",
    "typescript": "typescript",
    "javascriptreact": "javascriptreact",
    "typescriptreact": "typescriptreact"
  },
  "bradlc.vscode-tailwindcss.experimental.classRegex": [
    [
      "tw`([^`]*)`",
      "(?:'|\"|`)([^'\"`]*[^'\"`\\s)(]*)(?:'|\"|`)"
    ]
  ],
  // Testing Settings
  "jest.autoRun": {
    "watch": false,
    "onStartup": [
      "all-tests"
    ]
  },
  "jest.showCoverageOnLoad": true,
  // Accessibility Settings
  "accessibility.signals.announceInlineSuggestion": true,
  "editor.accessibilitySupport": "auto",
  // Security Settings
  "security.workspace.trust.untrustedFiles": "prompt",
  "extensions.ignoreRecommendations": false,
  // Performance Settings
  "typescript.server.log": "off",
  "typescript.tsserver.maxTsServerMemory": 4096,
  "typescript.tsserver.log": "off",
  // Debug Settings
  "debug.console.fontSize": 14,
  "debug.console.lineHeight": 18,
  "debug.inlineValues": "auto",
  // Workspace Trust Settings
  "security.workspace.trust.enabled": true,
  "security.workspace.trust.startupPrompt": "always",
  // Language-specific Settings
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.formatOnSave": true,
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    }
  },
  // Task Settings
  "tasks.autoDetect": "on",
  "npm.packageManager": "npm",
  // Live Share Settings (if extension is installed)
  "liveshare.featureSet": "stable",
  "liveshare.presence": true,
  // Remote Development Settings
  "remote.extensionKind": {
    "ms-vscode-remote.remote-containers": [
      "workspace"
    ]
  },
  "chat.mcp.serverSampling": {
    "Trade-X-Pro-Global/.vscode/mcp.json: shadcn": {
      "allowedModels": [
        "copilot/auto"
      ]
    }
  }
}